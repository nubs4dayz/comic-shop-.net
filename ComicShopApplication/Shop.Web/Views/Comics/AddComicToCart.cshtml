@model Shop.Domain.DTO.AddToShoppingCartDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected comic to your shopping cart!</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddComicToCart">
            <input type="hidden" asp-for="SelectedComicId"/>
            <div class="form-group">
                <label asp-for="SelectedComic.ComicName">Comic Name</label>
                <input disabled asp-for="SelectedComic.ComicName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group mt-2">
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>