@using Microsoft.AspNetCore.Identity
@inject SignInManager<Shop.Domain.Identity.ShopApplicationUser> SignInManager
@inject UserManager<Shop.Domain.Identity.ShopApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Comic Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EShopWeb.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #e5e5f7; opacity: 1; background-image:  linear-gradient(135deg, #C7C0F0 25%, transparent 25%), linear-gradient(225deg, #C7C0F0 25%, transparent 25%), linear-gradient(45deg, #C7C0F0 25%, transparent 25%), linear-gradient(315deg, #C7C0F0 25%, #e5e5f7 25%); background-position:  10px 0, 10px 0, 0 0, 0 0; background-size: 10px 10px; background-repeat: repeat;">
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3" style="background-color: #FFF7ED">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Comic Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class=nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="true" asp-area="" asp-controller="Comics" asp-action="Index">Comics</a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="" asp-controller="Comics" asp-action="Index">All Comics</a></li>
                                <li><div class="dropdown-divider"></div></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Comics", new { genre = "Action" })">Action</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Comics", new { genre = "Adventure" })">Adventure</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Comics", new { genre = "Fantasy" })">Fantasy</a></li>
                                  <li><a class="dropdown-item" href="@Url.Action("Index", "Comics", new { genre = "Science Fiction" })">Science Fiction</a></li>
                                  <li><a class="dropdown-item" href="@Url.Action("Index", "Comics", new { genre = "Horror" })">Horror</a></li>
                                  <li><a class="dropdown-item" href="@Url.Action("Index", "Comics", new { genre = "Other" })">Other</a></li>
                              </ul>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                 <a class="nav-link active" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Shopping Cart</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                 <a class="nav-link active" asp-area="" asp-controller="Order" asp-action="Index">Orders</a>
                            </li>
                            <li class="nav-item">
                                 <a class="nav-link active" asp-area="" asp-controller="User" asp-action="ImportUsers">Import Users</a>
                            </li>
                            <li class="nav-item">
                                 <a class="nav-link active" asp-area="" asp-controller="Account" asp-action="AddUserToRole">Add Role to Users</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container rounded-3" style="background-color: #FFF7ED">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="container-fluid" style="background-color: #FFF7ED">
        <div class="container">
          <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-muted">© 2023 Comic Shop</p>

            <ul class="nav col-md-4 justify-content-end">
              <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Comic Shop</a></li>
              <li class="nav-item"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
            </ul>
          </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
