@{
}

@model Shop.Domain.DomainModels.Order

<div class="container">

    <p>
        <a class="btn btn-primary m-2">@Model.User.Email - @Model.User.FirstName @Model.User.LastName</a>
    </p>

    @for (int i = 0; i < Model.ComicInOrders.Count(); i++)
    {
        var item = Model.ComicInOrders.ElementAt(i);

        if (i % 3 == 0)
        {
            @:<div class="row d-flex justify-content-evenly">
            }

            <div class="card m-5 col-4 border border-2 border-primary" style="width: 19rem; background-color: #FFF7ED;">
                <img class="card-img-top m-1 rounded-3" src="@item.Comic.ComicCover" style="height: 350px; padding-right: 5px" alt="Image for Comic!">

                <div class="card-body">
                    <h6 class="card-title text-center">@item.Comic.ComicName</h6>
                    <h6>Price: @item.Comic.ComicPrice ДЕН.</h6>
                    <h6>Quantity: @item.Quantity</h6>
                    <h6>Total: @(item.Comic.ComicPrice * item.Quantity) ДЕН.</h6>
                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }

    <a asp-controller="Order" asp-action="Index" class="btn btn-warning m-2" style="text-align: center">Back to List</a>

</div>